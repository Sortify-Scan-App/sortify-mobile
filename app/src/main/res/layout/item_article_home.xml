<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="0dp">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_article1"
                android:layout_width="105dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_news"
                app:shapeAppearanceOverlay="@style/ShapeImageRadius" />

            <TextView
                android:id="@+id/tv_article_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sampah Plastik Cemari\nSungai di Indonesia"
                android:textAlignment="center"
                android:textColor="@color/custom_text"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>